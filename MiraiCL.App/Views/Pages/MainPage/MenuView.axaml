<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="using:MiraiCL.App.ViewModels.Pages.MainPage"
             x:DataType="vm:MenuViewModel"
             x:Class="MiraiCL.App.Views.Pages.MainPage.MenuView"
             xmlns:controls="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime">
    <UserControl.Styles>
        <Style Selector="controls|Card.MenuViewStyle">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Width" Value="480"/>
        </Style>

        <Style Selector="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="MaxWidth" Value="70"/>
        </Style>

        <!-- 悬停状态：使用伪类选择器 -->
        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="#E0E0E0"/>
        </Style>
        <Style Selector="Button.Selected">
            <!-- 选中状态样式 -->
        </Style>
    </UserControl.Styles>
    <StackPanel>
        <controls:Card Classes="MenuViewStyle">
            <StackPanel VerticalAlignment="Center" Height="40" HorizontalAlignment="Center"> 
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/> 
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="70"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="主页面" Foreground="#000000" Grid.Row="0" Grid.Column="0"/>
                    <Button Content="下载" Foreground="#000000" Grid.Row="0" Grid.Column="1"/>
                    <Button Content="联机" Foreground="#000000" Grid.Row="0" Grid.Column="2"/>
                    <Button Content="设置" Foreground="#000000" Grid.Row="0" Grid.Column="3"/>
                    <Button Content="更多" Foreground="#000000" Grid.Row="0" Grid.Column="4"/>
                </Grid>
            </StackPanel>
        </controls:Card>
    </StackPanel>
</UserControl>