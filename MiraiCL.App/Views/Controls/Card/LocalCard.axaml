<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MiraiCL.App.Views.Controls.Card.LocalCard"
             xmlns:controls="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
             xmlns:vm="using:MiraiCL.App.ViewModels.Controls.Card"
             x:DataType="vm:CardViewModel">

    <UserControl.DataContext>
        <vm:CardViewModel />
    </UserControl.DataContext>

    <UserControl.Styles>
        <Style Selector="controls|Card.AppCardStyle">
            <Setter Property="CornerRadius" Value="{Binding CornerRadius}"/>
            <Setter Property="Margin" Value="{Binding CardMargin}"/>
            <Setter Property="Padding" Value="{Binding CardPadding}"/>
            <Setter Property="Background" Value="{Binding CardBackground}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="200"/>
        </Style>
    </UserControl.Styles>

    <!-- 内容容器 -->
    <controls:Card Classes="AppCardStyle">
        <ContentControl Content="{Binding Children}"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch"/>
    </controls:Card>
</UserControl>